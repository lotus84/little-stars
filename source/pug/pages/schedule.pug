extends ../base/layout

block variables
  - const title = "Расписание - сайт 1-в класса школы №56" //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentPage = 1 //- для остальных страниц пишем пустую строку или индекс активного headerLinks

block main
  main.page-main
    section.intro.intro--blue
      .intro__wrapper.container
        h2.intro__title Расписание уроков

    section.schedule-lesson
      .schedule-lesson__wrapper.container
        ul.schedule-lesson__list
          each item in lessonsList
            li.schedule-lesson__item
              +card-weekday(item)

    section.intro.intro--yellow
      .intro__wrapper.container
        h2.intro__title Расписание звонков

    section.schedule-call
      .schedule-call__wrapper.container
        .schedule-call__img-box
          +img("content", "img-schedule", "jpg", 590, 298, "Расписание звонков")
        ul.schedule-call__list
          each item in callList
            li.schedule-call__item
              +card-call(item)


block modals
