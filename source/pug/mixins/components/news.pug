mixin news(props = {})
  .news
    time.news__time(datetime=props.datetime)!=props.date
    .news__wrapper
      if props.text
        .news__text
          each textItem in props.text
            p!=textItem
      if props.images
        .news__images
          each image in props.images
            .news__img-box
              img(src=`img/content/${image.name}`, width=image.width, height=image.height, alt=image.alt)
      if props.videos
        .news__videos
          each video in props.videos
            .news__media-box
              video(preload="metadata" controls)
                source(src=`video/${video.name}.mp4` type="video/mp4")
      if props.links
        .news__link-list
          each link in props.links
            .news__link-item
              span!=link.text
              a.news__link(href=link.href, download=link.download ? true : null) Скачать
